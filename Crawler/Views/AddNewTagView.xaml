<Window x:Class="Crawler.Views.AddNewTagView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tag" Height="55" Width="300" WindowStyle="ToolWindow"
        Loaded="AddNewTagView_OnLoaded">
    <StackPanel Orientation="Horizontal">
        <TextBox Width="250" 
                 Margin="1"
                 Text="{Binding Model.NewTag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Name="TextBoxTag"
                 />
        <Button Width="30" Margin="2,1,1,1" Content="OK" Click="ButtonBase_OnClick"/>
    </StackPanel>

</Window>