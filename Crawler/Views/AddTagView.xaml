<Window x:Class="Crawler.Views.AddTagView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tag" Height="60" Width="300" WindowStyle="ToolWindow"
        DataContext="{Binding Path=AddTagViewModel, Source={StaticResource VmLocator}}"
        x:Name="window"
        >
    <StackPanel Orientation="Horizontal">
        <ComboBox ItemsSource="{Binding Tags}" 
                  SelectedItem="{Binding SelectedTag}" 
                  DisplayMemberPath="Title" 
                  Margin="1" Width="250"
                  IsEditable="False"
                  />
        <Button Command="{Binding SaveCommand, Mode=OneTime}" CommandParameter="{Binding ElementName=window}" 
                Width="30" Margin="2,1,1,1" Content="OK" x:Name="buttonOk"
                />
    </StackPanel>
    
</Window>
