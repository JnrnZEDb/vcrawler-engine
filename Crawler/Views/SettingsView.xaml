<Window x:Class="Crawler.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="310" Width="380" ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Title="Settings"
        Loaded="SettingsView_OnLoaded"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl BorderThickness="0.5">
            <TabItem Header="Common">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"></RowDefinition>
                        <RowDefinition Height="60"></RowDefinition>
                        <RowDefinition Height="60"></RowDefinition>
                        <!--<RowDefinition Height="60"></RowDefinition>-->
                        <RowDefinition Height="20"></RowDefinition>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Download directory">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding Model.DirPath}" VerticalAlignment="Stretch" FontSize="14" Margin="0,5" VerticalContentAlignment="Center" />
                            <Button Grid.Column="1" Content="Open" Margin="10,5,5,5" Command="{Binding OpenDirCommand}" CommandParameter="DirPath" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="MPC-BE" Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding Model.MpcPath}" VerticalAlignment="Stretch" FontSize="14" Margin="0,5" VerticalContentAlignment="Center">
                                <TextBox.Resources>
                                    <VisualBrush x:Key="HelpBrush" TileMode="None" Opacity="0.4" Stretch="None" AlignmentX="Left" AlignmentY="Bottom">
                                        <VisualBrush.Visual>
                                            <TextBlock FontStyle="Normal" Text="Path to MPC for online watching" FontSize="13" />
                                        </VisualBrush.Visual>
                                        <VisualBrush.Transform>
                                            <ScaleTransform CenterX="250" ScaleX="0.99" ScaleY="0.97"/>
                                        </VisualBrush.Transform>
                                    </VisualBrush>
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="{x:Null}">
                                                <Setter Property="Background" Value="{StaticResource HelpBrush}" />
                                            </Trigger>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background" Value="{StaticResource HelpBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Column="1" Margin="10,5,5,5" Content="Open" Command="{Binding OpenDirCommand}" CommandParameter="MpcPath" />
                        </Grid>
                    </GroupBox>
                    <!--<GroupBox Header="Ffmpeg" Grid.Row="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding Model.FfmegPath}" VerticalAlignment="Stretch" FontSize="14" Margin="0,5" VerticalContentAlignment="Center">
                                <TextBox.Resources>
                                    <VisualBrush x:Key="HelpBrush" TileMode="None" Opacity="0.4" Stretch="None" AlignmentX="Left" AlignmentY="Bottom">
                                        <VisualBrush.Visual>
                                            <TextBlock FontStyle="Normal" Text="Path to Ffmpeg for merging" FontSize="13" />
                                        </VisualBrush.Visual>
                                        <VisualBrush.Transform>
                                            <ScaleTransform CenterX="250" ScaleX="0.99" ScaleY="0.97"/>
                                        </VisualBrush.Transform>
                                    </VisualBrush>
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="{x:Null}">
                                                <Setter Property="Background" Value="{StaticResource HelpBrush}" />
                                            </Trigger>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background" Value="{StaticResource HelpBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Column="1" Margin="10,5,5,5" Content="Open" Command="{Binding OpenDirCommand}" CommandParameter="FfmegPath" />
                        </Grid>
                    </GroupBox>-->
                    <GroupBox Header="{Binding Model.YouHeader, Mode=OneWay}" Grid.Row="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"></ColumnDefinition>
                                <ColumnDefinition Width="40"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding Model.YouPath}" VerticalAlignment="Stretch" FontSize="14" Margin="0,5" VerticalContentAlignment="Center">
                                <TextBox.Resources>
                                    <VisualBrush x:Key="HelpBrush" TileMode="None" Opacity="0.4" Stretch="None" AlignmentX="Left" AlignmentY="Bottom">
                                        <VisualBrush.Visual>
                                            <TextBlock FontStyle="Normal" Text="Path to Youtube-dl for downloading" FontSize="13" />
                                        </VisualBrush.Visual>
                                        <VisualBrush.Transform>
                                            <ScaleTransform CenterX="250" ScaleX="0.99" ScaleY="0.97"/>
                                        </VisualBrush.Transform>
                                    </VisualBrush>
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="{x:Null}">
                                                <Setter Property="Background" Value="{StaticResource HelpBrush}" />
                                            </Trigger>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background" Value="{StaticResource HelpBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Column="1" Height="25" Margin="10,0,0,0" Click="UpdateButton_OnClick">
                                <Image Source="../Images/refresh-24.png"></Image>
                            </Button>
                            <Button Grid.Column="2" Margin="10,5,5,5" Content="Open" Command="{Binding OpenDirCommand}" CommandParameter="YouPath" />
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Credentials">
                <DataGrid ItemsSource="{Binding Model.SupportedCreds}" CanUserAddRows="False" AutoGenerateColumns="False" HeadersVisibility="Column" RowHeight="20">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Site}" Header="Site" Width="120" IsReadOnly="True"></DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Login}" Header="Login" Width="120"></DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Pass}" Header="Password" Width="*"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
        <!--<Label Grid.Row="1" Content="{Binding Result}" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="ForestGreen" />-->
        <Button Grid.Row="1" Content="Save" Width="362" Margin="2"
                             Command="{Binding SaveCommand}"
                             Name="ButtonSave"
                             HorizontalAlignment="Right"
                             />
        <StatusBar Grid.Row="2">
            <ProgressBar Width="370" Height="20" Minimum="0" Maximum="100" Value="{Binding Model.PrValue, Mode=OneWay}">
                <ProgressBar.Resources>
                    <Style TargetType="ProgressBar">
                        <!--<Style.Triggers>
                            <DataTrigger Binding="{Binding IsPrVisible, Mode=OneWay}" Value="true">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsPrVisible, Mode=OneWay}" Value="false">
                                <Setter Property="Visibility" Value="Hidden" />
                            </DataTrigger>
                        </Style.Triggers>-->
                    </Style>
                </ProgressBar.Resources>
            </ProgressBar>
        </StatusBar>
    </Grid>
</Window>