<Window x:Class="Crawler.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="250" Width="380" ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Title="Settings"
        Loaded="SettingsView_OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl BorderThickness="0.5">
            <TabItem Header="Common">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"></RowDefinition>
                        <RowDefinition Height="60"></RowDefinition>
                        <RowDefinition Height="20"></RowDefinition>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Download Directory:">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding Model.DirPath}" VerticalAlignment="Stretch" FontSize="14" Margin="0,6" VerticalContentAlignment="Center" />
                            <Button Grid.Column="1" Content="Open" Margin="8,6,3,6" Command="{Binding OpenDirCommand}" CommandParameter="DirPath" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="MPC-BE:" Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding Model.MpcPath}" VerticalAlignment="Stretch" FontSize="14" Margin="0,6" VerticalContentAlignment="Center">
                                <TextBox.Resources>
                                    <VisualBrush x:Key="HelpBrush" TileMode="None" Opacity="0.4" Stretch="None" AlignmentX="Left" AlignmentY="Bottom">
                                        <VisualBrush.Visual>
                                            <TextBlock FontStyle="Normal" Text="Path to MPC for online watching (optional)" FontSize="13" />
                                        </VisualBrush.Visual>
                                        <VisualBrush.Transform>
                                            <ScaleTransform CenterX="250" ScaleX="0.99" ScaleY="0.97"/>
                                        </VisualBrush.Transform>
                                    </VisualBrush>
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="{x:Null}">
                                                <Setter Property="Background" Value="{StaticResource HelpBrush}" />
                                            </Trigger>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background" Value="{StaticResource HelpBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Column="1" Margin="8,6,3,6" Content="Open" Command="{Binding OpenDirCommand}" CommandParameter="MpcPath" />
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Credentials">
                <DataGrid ItemsSource="{Binding Model.SupportedCreds}" CanUserAddRows="False" AutoGenerateColumns="False" HeadersVisibility="Column" RowHeight="20">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Site}" Header="Site" Width="120" IsReadOnly="True"></DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Login}" Header="Login" Width="120"></DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Pass}" Header="Password" Width="*"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
        <!--<Label Grid.Row="1" Content="{Binding Result}" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="ForestGreen" />-->
        <Button Grid.Row="1" Width="76" Content="Save" Height="25"
                            Command="{Binding SaveCommand}"
                            Name="ButtonSave"
                            HorizontalAlignment="Right"
                            Margin="0,0,11,0" />
        <StatusBar Grid.Row="2">
            <ProgressBar Width="370" Height="20" Minimum="0" Maximum="100">
                <ProgressBar.Resources>
                    <Style TargetType="ProgressBar">
                        <!--<Style.Triggers>
                            <DataTrigger Binding="{Binding IsPrVisible, Mode=OneWay}" Value="true">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsPrVisible, Mode=OneWay}" Value="false">
                                <Setter Property="Visibility" Value="Hidden" />
                            </DataTrigger>
                        </Style.Triggers>-->
                    </Style>
                </ProgressBar.Resources>
            </ProgressBar>
        </StatusBar>
    </Grid>
</Window>